package com.cts.railway;

public class DataBase implements TrainDAO{
	
	private Train train;
	private int[][] Chart;
	
	public DataBase() {
		 Chart = new int[8][5];
	}

	@Override
	public Passangers getPassanger(int pnr) {
		for(Seat seat : train.getSeats()) {
			for(Passangers pass : seat.getPass()) {
				if(pass.getPnr()==pnr) {
					return pass;
				}
			}
		}
		return null;
	}

	@Override
	public int[][] getChart() {
		return Chart;
	}

	@Override
	public void AddTrain(Train train) {
		this.train=train;
	}

	@Override
	public Train getTrain() {
		return train;
	}

	@Override
	public Seat getSeat(int no) {
		for(Seat s : train.getSeats()) {
			if(s.getSeatNo()==no) {
				return s;
			}
		}
		return null;
	}
}
